@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<br>
<h1>Tags</h1>

<hr>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet!</h3>
} 

@foreach (Tag tag in Model)
{
  <li>@Html.ActionLink($"{tag.Cuisine}", "Details", new { id = tag.TagId }, new { @class = "linky"} )</li>
}

<hr>

<p>@Html.ActionLink("Add new tag", "Create", new { id = "nav"}, new { @class = "linky"} )</p>