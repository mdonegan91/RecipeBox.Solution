@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model RecipeBox.Models.Tag

<br>
<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Cuisine): @Html.DisplayFor(model => model.Cuisine)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This tag does not belong to any recipes</p>
}
else
{
  <h4>Recipes the tag belongs to:</h4>
  <ul>
  @foreach(RecipeTag join in Model.JoinEntities)
  {
    <li>@join.Recipe.RecipeName</li>
    @using (Html.BeginForm("DeleteJoin", "Tags"))
    {
      @Html.Hidden("joinId", @join.RecipeTagId)
      <input type="submit" class="buttony" value="Delete"/>
    }
  }
  </ul><hr>
}

<p>@Html.ActionLink("Add a Recipe", "AddRecipe", new { id = Model.TagId }, new { @class = "linky"} ) | @Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId }, new { @class = "linky"} ) | @Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId }, new { @class = "linky"} )</p>
<p>@Html.ActionLink("Back to Tag List", "Index", new { id = "nav"}, new { @class = "linky"} )</p>