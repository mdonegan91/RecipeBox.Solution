@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<br>
<h4>Add a new tag</h4><hr>

<p>@Html.ValidationMessageFor(model => model.Cuisine, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Cuisine)<br>
    @Html.TextBoxFor(model => model.Cuisine)

    <input type="submit" class="buttony" value="Add new tag"/><hr>
}
<p>@Html.ActionLink("Back to Tag List", "Index", new { id = "nav"}, new { @class = "linky"} )</p>