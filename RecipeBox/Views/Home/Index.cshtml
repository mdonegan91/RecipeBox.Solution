@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
<br>
<h1>Welcome to the Recipe Box</h1>

<hr>
@if (User.Identity.IsAuthenticated)
{
  <h4>Your Recipes:</h4>
  @if (Model["recipes"].Length == 0)
  {
    <p>No recipes have been added yet!</p>
  } 
  <ul>
    @foreach (Recipe recipe in Model["recipes"])
    {
      <li>@Html.ActionLink(@recipe.RecipeName, "Details", "Recipes", new { id = @recipe.RecipeId}, new { @class = "linky"} )</li>
    }
  </ul>
}
else
{
  <h4>Recipes</h4>
  <p>Please @Html.ActionLink("log in", "LogIn", "Account", new { id = "nav"}, new { @class = "linky"} ) to view or manage your recipes.</p>
}

<hr>

<p>@Html.ActionLink("Recipes from All Chefs", "Ranking", "Recipes", new { id = "nav"}, new { @class = "linky"} )</p>

<hr>

<p>@Html.ActionLink("Manage recipes", "Index", "Recipes", new { id = "nav"}, new { @class = "linky"} ) | @Html.ActionLink("Manage tags", "Index", "Tags", new { id = "nav"}, new { @class = "linky"} )</p>
<p>@Html.ActionLink("Create or manage an account", "Index", "Account", new { id = "nav"}, new { @class = "linky"} )</p>