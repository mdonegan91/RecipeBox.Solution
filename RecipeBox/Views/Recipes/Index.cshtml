@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<br>
<h1>All Recipes</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      @Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId } , new { @class = "linky"} )
    }
  </ul>
}

<hr>

@using (Html.BeginForm("Search","Recipes")) {
<div class="search-container">
        <input type="text" name="search" placeholder="Search All Recipes by Ingredient..." class="search-input">
        <a href="#" class="search-btn">
                <i class="fas fa-search"></i>      
        </a>
    </div>
}

<hr>

<p>@Html.ActionLink("Add new recipe", "Create", new { id = "nav"}, new { @class = "linky"} )</p>