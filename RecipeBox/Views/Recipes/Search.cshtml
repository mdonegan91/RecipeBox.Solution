@{
  Layout = "_Layout";
}
@using RecipeBox.Models;
@using System.Collections.Generic;
@model List<RecipeBox.Models.Recipe>;

<br>
<h4>Search Results</h4>
@if (Model.Count == 0)
{
  <p> No recipes match this search </p>
}
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId }, new { @class = "linky"} )</li>
    }
  </ul>
}