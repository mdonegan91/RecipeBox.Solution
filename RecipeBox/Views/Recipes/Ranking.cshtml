@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<br>
<h1>Recipes Sorted By Ranking</h1>

<hr>

@if (User.Identity.IsAuthenticated)
{
  @if (@Model.Count == 0)
  {
    <h3>No recipes have been added yet</h3>
  }

  <ul>
  @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId }, new { @class = "linky"} ) | @Html.ActionLink($"{recipe.Ranking}", "Details", new { id = recipe.RecipeId }, new { @class = "linky"} )</li>
    }
  </ul>
}
else
{
  <h4>Recipes</h4>
  <p>Please @Html.ActionLink("log in", "LogIn", "Account") to view or manage your recipes.</p>
}

<hr>

@using (Html.BeginForm("Search","Recipes")) {
<div class="search-container">
        <input type="text" name="search" placeholder="Search All Recipes by Ingredient..." class="search-input">
        <a href="#" class="search-btn">
                <i class="fas fa-search"></i>      
        </a>
    </div>
}